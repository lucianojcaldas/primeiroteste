package exer1b;

import java.io.*;

public class progCriar {
	public static void main(String args[]) {
String vallog = "";




		String str;
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		System.out.println("entra com o texto ou escreva QUIT para sair");

		
		
		try (FileWriter fw = new FileWriter(vallog)) {
			do {
				System.out.println(": ");
				str = br.readLine();
				if (str.compareTo("stop") == 0)
					break;
				str = str + "\r\n";
				fw.write(str);
			} while (str.compareTo("stop") != 0);
		} catch (IOException exc) {
			System.out.println("io Erro: " + exc);
		}

	}

}
